.chat-side
  .side-header
    .side-header__box
      %h2.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.list
          =link_to new_group_path, class: "side-header__box__menu__new-group" do
            =fa_icon 'pencil-square-o' ,class: 'icon'
        %li.link
          =link_to edit_user_path(current_user), class: "side-header__box__menu__edit-user" do
            =fa_icon 'cog',class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message